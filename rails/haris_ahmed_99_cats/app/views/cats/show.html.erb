<h1><%= @cat.name %></h1>


<table>

    <thead>
        <tr>
            <th>Attribute</th>
            <th>Value</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Age</td>
            <td><%= @cat.age %></td>
        </tr>

        <tr>
            <td>Birth Date</td>
            <td><%= @cat.birth_date %></td>
        </tr>

        <tr>
            <td>Color</td>
            <td><%= @cat.color %></td>
        </tr>

        <tr>
            <td>Sex</td>
            <td><%= @cat.sex %></td>
        </tr>
    </tbody>


</table>

<h1>Rental Requests</h1>


<table>

    <thead>
        <tr>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% @requests.each do |req| %>
            <%= render 'req_tr', req: req %>
        <% end %>

    </tbody>


</table>