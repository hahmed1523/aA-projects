<!DOCTYPE html>
<html>
  <head>
    <title>HarisAhmedGoalTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div>
      <h1>Goal Tracker</h1>
      <% if logged_in? %>
        <nav>
          <div class='user-detail'>
            <p>Logged in as: <%= current_user.email %></p>
            <form action=<%= session_url %> method='post'>
              <input
                type="hidden"
                name="_method"
                value="delete">

              <%= auth_token %>
              
              <input
                type="submit"
                value="Sign Out">

            </form>
          </div>
        </nav>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
